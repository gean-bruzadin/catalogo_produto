@model catalogo_produto.Models.Usuario

@{
    ViewData["Title"] = "Cadastrar Novo Usuário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Cadastrar Novo Usuário</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Salvar">
                        <div class="mb-3">
                            <label asp-for="Nome_usuario" class="form-label"></label>
                            <input asp-for="Nome_usuario" class="form-control" placeholder="Digite o nome completo" />
                            <span asp-validation-for="Nome_usuario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email_usuario" class="form-label"></label>
                            <input asp-for="Email_usuario" class="form-control" placeholder="email@exemplo.com" />
                            <span asp-validation-for="Email_usuario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Senha_usuario" class="form-label"></label>
                            <input asp-for="Senha_usuario" class="form-control" placeholder="Digite a senha" type="password" />
                            <span asp-validation-for="Senha_usuario" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Cadastrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
